{
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],  
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended"
  ],  
  "rules": {
    "semi": "off",
    "quotes": ["warn", "double"],
    "indent": ["warn", 2],
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "error",
    "@typescript-eslint/semi": ["error", "always"]
  }
}